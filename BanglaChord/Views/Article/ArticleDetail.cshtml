@{
    if(ViewBag.post != null) {
        ViewBag.Title = ViewBag.post.Title;
    } else {
        ViewBag.Title = "গানটি পাওয়া যায়নি";
    }
    
}

<!DOCTYPE HTML>
<html>
	<head>
		<title>@ViewBag.Title</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--[if lte IE 8]><script src="/assets/js/ie/html5shiv.js"></script><![endif]-->
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Hind%20Siliguri">
		<link rel="stylesheet" href="/assets/css/main.css" />
		<!--[if lte IE 8]><link rel="stylesheet" href="/assets/css/ie8.css" /><![endif]-->
	</head>
	<body>

		<!-- Content -->
			<div id="content">
				<div class="inner">
                    @{
                        if (ViewBag.post != null){
                            Html.RenderPartial("../Shared/_DetailPost", (BanglaChord.ViewModels.PostFull)ViewBag.post);
                        }
                    }
				</div>
			</div>
    <!-- load up sidebar -->
    @{Html.RenderPartial("../Shared/_SideBar"); }

		<!-- Scripts -->
			<script src="/assets/js/jquery.min.js"></script>
			<script src="/assets/js/skel.min.js"></script>
			<script src="/assets/js/util.js"></script>
			<!--[if lte IE 8]><script src="/assets/js/ie/respond.min.js"></script><![endif]-->
			<script src="/assets/js/main.js"></script>

	</body>
</html>